public class EAN13 extends EAN
{
	
	//--------------------------------------------------------------------------
	//
	//  Constructor
	//
	//--------------------------------------------------------------------------
	
	public function EAN13()
	{
		super();
		
		codeLength = 13;
		guardIndices = [0, 2, 28, 30, 56, 58];
		numberGroups =
		[
			[0, 1, 2],
			[1, 6, 15],
			[7, 6, 62]
		];
	}
	
	//--------------------------------------------------------------------------
	//
	//  Constants
	//
	//--------------------------------------------------------------------------
	
	protected const leftHalfEncoding:Array = 
	[
		["A", "A", "A", "A", "A", "A"],
		["A", "A", "B", "A", "B", "B"],
		["A", "A", "B", "B", "A", "B"],
		["A", "A", "B", "B", "B", "A"],
		["A", "B", "A", "A", "B", "B"],
		["A", "B", "B", "A", "A", "B"],
		["A", "B", "B", "B", "A", "A"],
		["A", "B", "A", "B", "A", "B"],
		["A", "B", "A", "B", "B", "A"],
		["A", "B", "B", "A", "B", "A"]
	];
	
	//--------------------------------------------------------------------------
	//
	//  Variables
	//
	//--------------------------------------------------------------------------
	
	//--------------------------------------------------------------------------
	//
	//  Overridden properties
	//
	//--------------------------------------------------------------------------
	
	//--------------------------------------------------------------------------
	//
	//  Properties
	//
	//--------------------------------------------------------------------------
	
	//--------------------------------------------------------------------------
	//
	//  Overridden methods
	//
	//--------------------------------------------------------------------------
	
    //----------------------------------
    //  encode
    //----------------------------------
	
	override protected function encode():void
	{
		bars = [];
		
		encodeNormalGuard();
		
		var firstDigit:int = parseInt( code.charAt(0) );
		var charIndex:int = 1;
		
		for each (var type:String in leftHalfEncoding[firstDigit])
		{
			encodeDigit(parseInt( code.charAt(charIndex++) ), type);
		}
		
		encodeCentralGuard();
		
		while (charIndex < 13)
		{
			encodeDigit(parseInt( code.charAt(charIndex++) ), "A");
		}
		
		encodeNormalGuard();
	}
	
