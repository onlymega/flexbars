<?xml version="1.0" encoding="utf-8"?>
<mx:Form
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:fb="http://code.google.com/p/flexbars"
	width="580" height="380" label="EAN13"
	backgroundColor="white"
	defaultButton="{submitButton}"
>
	<mx:Script>
		<![CDATA[
			import mx.validators.Validator;
			
			private function submitForm():void
			{
				if (Validator.validateAll([validator]).length == 0)
					barcode.code = code.text;
			}
		]]>
	</mx:Script>
	
	<fb:EAN13Validator id="validator" source="{code}" property="text"/>
	
	<mx:FormHeading label="European Article Numbering 13"/>
	
	<mx:FormItem label="Code">
		<mx:TextInput id="code" maxChars="13"/>
	</mx:FormItem>
	
	<mx:FormItem label="Description">
		<mx:Text text="The EAN-13 barcodes are used worldwide for marking products often sold at retail point of sale. The less commonly used EAN-8 barcodes are used also for marking retail goods; however, they are usually reserved for smaller items, for example confectionery." width="430"/>
	</mx:FormItem>
	
	<mx:FormItem>
		<mx:Button id="submitButton" label="Generate" click="submitForm()"/>
	</mx:FormItem>
	
	<mx:FormItem id="barcodeItem">
		<fb:EAN13 id="barcode" x="20" y="20" />
	</mx:FormItem>
</mx:Form>
